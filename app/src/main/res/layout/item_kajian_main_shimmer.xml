<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/eventLayoutRoot"
        android:layout_width="180dp"
        android:layout_height="205dp"
        android:layout_marginVertical="@dimen/activity_margin"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="@dimen/activity_margin"
        android:orientation="horizontal"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_padding">

            <ImageView
                android:id="@+id/img_kajian_home"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@color/colorShimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date_kajian_home"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginEnd="12dp"
                android:textSize="11sp"
                android:background="@color/colorShimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_kajian_home"
                tools:text="2 days ago" />

            <TextView
                android:id="@+id/tv_title_kajian_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:maxLines="2"
                android:paddingHorizontal="12dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@color/colorShimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_kajian_home"
                tools:text="@string/app_name" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/activity_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_kajian_home"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tv_source_kajian_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_margin"
                    android:layout_weight="1"
                    android:background="@color/colorShimmer"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Youtube" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="@dimen/activity_margin"
                    android:background="@color/colorShimmer"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="180dp"
        android:layout_height="205dp"
        android:layout_marginVertical="@dimen/activity_margin"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="@dimen/activity_margin"
        android:orientation="horizontal"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_padding">

            <ImageView
                android:id="@+id/img_kajian_home_two"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@color/colorShimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date_kajian_home_two"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:layout_marginEnd="12dp"
                android:textSize="11sp"
                android:background="@color/colorShimmer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_kajian_home_two"
                tools:text="2 days ago" />

            <TextView
                android:id="@+id/tv_title_kajian_home_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:maxLines="2"
                android:background="@color/colorShimmer"
                android:paddingHorizontal="12dp"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_kajian_home_two"
                tools:text="@string/app_name" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/activity_margin"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_kajian_home_two"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/tv_source_kajian_home_two"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_margin"
                    android:background="@color/colorShimmer"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Youtube" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:background="@color/colorShimmer"
                    android:layout_marginEnd="@dimen/activity_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
